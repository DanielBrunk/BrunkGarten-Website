---
import Layout from '../components/Layout.astro';
import { siteConfig } from '../config';
---

<Layout>
  <section class="tiles">
    <!-- Leistungen -->
    <a href="/leistungen/galabau" class="tile">
      <h2 class="tile__title">GaLaBau</h2>
      <p class="tile__text">Garten- und Landschaftsbau vom Meisterbetrieb. Planung, Neuanlage und Umgestaltung.</p>
      <span class="tile__arrow" aria-hidden="true">&rarr;</span>
    </a>
    <a href="/leistungen/gartenpflege" class="tile tile--alt">
      <h2 class="tile__title">Gartenpflege</h2>
      <p class="tile__text">Regelmäßige Pflege erhält Funktion und Optik Ihres Gartens.</p>
      <span class="tile__arrow" aria-hidden="true">&rarr;</span>
    </a>

    <a href="/leistungen/bewaesserung" class="tile tile--alt">
      <h2 class="tile__title">Bewässerung</h2>
      <p class="tile__text">Professionelle Bewässerungsanlagen. Automatisch, wassersparend, zuverlässig.</p>
      <span class="tile__arrow" aria-hidden="true">&rarr;</span>
    </a>
    <a href="/leistungen/maehroboter" class="tile">
      <h2 class="tile__title">Mähroboter</h2>
      <p class="tile__text">Husqvarna Automower — Verkauf, Installation und Service.</p>
      <span class="tile__arrow" aria-hidden="true">&rarr;</span>
    </a>

    <a href="/leistungen/artenschutz" class="tile">
      <h2 class="tile__title">Artenschutz</h2>
      <p class="tile__text">Naturnahe Gärten mit ökologischem Mehrwert.</p>
      <span class="tile__arrow" aria-hidden="true">&rarr;</span>
    </a>
    <a href="#kontakt" class="tile tile--dark">
      <h2 class="tile__title">Kontakt</h2>
      <p class="tile__text">Projekt besprechen oder Beratung anfragen.</p>
      <span class="tile__arrow" aria-hidden="true">&darr;</span>
    </a>

    <!-- Brunk Garten -->
    <div class="tile tile--primary">
      <blockquote class="tile__quote">
        <p>Du wirst überrascht sein, wie viel Leben in einen Raum passt.</p>
        <cite>Daniel Brunk, Gärtnermeister</cite>
      </blockquote>
      <ul class="tile__list">
        <li>Fachgerechte Ausführung</li>
        <li>Fachgerechte Pflege</li>
        <li>Ressourcen schonen</li>
        <li>Ökologische Bewirtschaftung</li>
        <li>Verzicht auf chemischen Pflanzenschutz</li>
      </ul>
    </div>
    <div class="tile tile--secondary">
      <h2 class="tile__title">Klimagarten</h2>
      <p class="tile__text">Gärten für den Wandel wappnen.</p>
      <dl class="tile__dl">
        <dt>Begrünung</dt>
        <dd>Pflanzen haben gleich mehrere positive Eigenschaften auf unser Klima.</dd>
        <dt>Wassermanagement</dt>
        <dd>Die Art und Menge an Wasser die uns in Zukunft zur Verfügung steht verändert sich.</dd>
        <dt>Artenvielfalt</dt>
        <dd>Der Verlust an Lebensraum oder ganzer Arten hat Auswirkungen auf unser empfindliches Ökosystem.</dd>
      </dl>
    </div>

    <!-- Kontakt -->
    <div class="tile tile--alt" id="kontakt">
      <h2 class="tile__title">Schreiben Sie uns</h2>
      <div class="tile__contact">
        <p>
          <strong>Telefon</strong><br />
          <a href={`tel:${siteConfig.phone}`}>{siteConfig.phoneDisplay}</a>
        </p>
        <p>
          <strong>E-Mail</strong><br />
          <a href={`mailto:${siteConfig.email}`}>{siteConfig.email}</a>
        </p>
        <p>
          <strong>Adresse</strong><br />
          {siteConfig.address.street}<br />
          {siteConfig.address.zip} {siteConfig.address.city}
        </p>
      </div>
    </div>
    <div class="tile tile--dark">
      <h2 class="tile__title">Öffnungszeiten</h2>
      <div class="tile__hours">
        {siteConfig.openingHours.map((entry) => (
          <p><strong>{entry.days}</strong><br />{entry.hours}</p>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  /* ============================================
     TILE GRID
     ============================================ */
  .tiles {
    display: grid;
    grid-template-columns: 1fr 1fr;
    scroll-snap-type: y proximity;
  }

  .tile {
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 50vh;
    padding: var(--space-2xl) var(--space-3xl);
    text-decoration: none;
    color: var(--color-text);
    background: var(--color-background);
    border-bottom: 1px solid var(--color-border);
    scroll-snap-align: start;
    transition: background-color var(--transition-base);
  }

  .tile:nth-child(odd) {
    border-right: 1px solid var(--color-border);
  }

  /* Varianten */
  .tile--alt {
    background: var(--color-background-alt);
  }

  .tile--dark {
    background: var(--color-text);
    color: var(--color-text-inverse);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .tile--primary {
    background: var(--color-primary);
    color: var(--color-text);
    border-color: rgba(0, 0, 0, 0.08);
  }

  .tile--secondary {
    background: var(--color-secondary);
    color: var(--color-text-inverse);
    border-color: rgba(0, 0, 0, 0.1);
  }

  /* Hover auf klickbare Tiles */
  a.tile:hover {
    background-color: color-mix(in srgb, var(--color-primary) 8%, var(--color-background));
    color: var(--color-text);
  }

  a.tile.tile--alt:hover {
    background-color: color-mix(in srgb, var(--color-primary) 10%, var(--color-background-alt));
  }

  a.tile.tile--dark:hover {
    background-color: color-mix(in srgb, var(--color-primary) 15%, var(--color-text));
    color: var(--color-text-inverse);
  }

  /* ============================================
     TILE INHALTE
     ============================================ */
  .tile__title {
    font-family: var(--font-family-heading);
    font-size: var(--font-size-3xl);
    font-weight: 700;
    line-height: var(--line-height-tight);
    margin-bottom: var(--space-md);
  }

  .tile__text {
    font-size: var(--font-size-md);
    opacity: 0.75;
    max-width: 40ch;
  }

  .tile__arrow {
    margin-top: auto;
    padding-top: var(--space-xl);
    font-size: var(--font-size-2xl);
    opacity: 0.4;
    transition: transform var(--transition-fast), opacity var(--transition-fast);
  }

  a.tile:hover .tile__arrow {
    transform: translateX(8px);
    opacity: 1;
    color: var(--color-primary);
  }

  a.tile.tile--dark:hover .tile__arrow {
    color: var(--color-primary);
  }

  /* Zitat */
  .tile__quote {
    font-family: var(--font-family-heading);
    font-style: italic;
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-xl);
  }

  .tile__quote cite {
    display: block;
    font-size: var(--font-size-sm);
    font-style: normal;
    opacity: 0.7;
    margin-top: var(--space-sm);
  }

  .tile__list {
    list-style: none;
    padding: 0;
  }

  .tile__list li {
    padding: var(--space-xs) 0;
    font-weight: 500;
  }

  .tile__list li + li {
    margin-top: 0;
  }

  /* Definition-Liste (Klima) */
  .tile__dl {
    margin-top: var(--space-xl);
  }

  .tile__dl dt {
    font-weight: 700;
    margin-top: var(--space-md);
  }

  .tile__dl dt:first-child {
    margin-top: 0;
  }

  .tile__dl dd {
    margin: 0;
    opacity: 0.8;
    font-size: var(--font-size-sm);
  }

  /* Kontakt */
  .tile__contact {
    margin-top: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .tile__contact a {
    color: var(--color-primary);
  }

  .tile__hours {
    margin-top: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .tile__hours p {
    margin: 0;
  }

  /* ============================================
     MOBILE
     ============================================ */
  @media (max-width: 639px) {
    .tiles {
      grid-template-columns: 1fr;
    }

    .tile {
      min-height: 45vh;
      padding: var(--space-xl) var(--space-lg);
      border-right: none;
    }

    .tile:nth-child(odd) {
      border-right: none;
    }

    .tile__title {
      font-size: var(--font-size-2xl);
    }
  }
</style>
